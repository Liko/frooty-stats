<div class="p-5">
    <div class="card col-10 pt-3 mx-auto hoverable">
        <div class="row p-3">
            <div class="col-4 text-center ptbm-5 ">
                <h4><%=link_to @match.home_club_name, club_path(@match.home_club) %></h4>
            </div>
            <div class="col-4 text-center ptbm-5">
                <h4>VS<h4>
            </div>
            <div class="col-4 text-center ptbm-5 ">
                <h4><%=link_to @match.away_club_name, club_path(@match.away_club) %></h4>
            </div>
        </div>
        <div class="row">
            <div class="col-4 text-center animated jello">
                <%= image_tag @match.home_club.image, size: "80x80" %>
            </div>
            <div class="col-1 text-center ">
                <h1><%=@match.home_goal_count%></h3>
            </div>
            <div class="col-2 text-center p-2">
                <h3>-</h3>
            </div>
            <div class="col-1 text-center ">
                <h1><%=@match.away_goal_count%></h3>
            </div>
            <div class="col-4 text-center pb-5 animated jello">
                <%= image_tag @match.away_club.image, size: "80x80" %>
            </div>
    </div>
</div>