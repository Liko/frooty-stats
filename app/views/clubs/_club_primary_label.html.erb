
<div class="row">
    <% @competition.clubs.each do |club|%>
    <div class="card col-12 col-md-5 m-3 mx-auto">
        <div class="mx-auto p-3">
            <%= image_tag club.image, size: "60x60" %>
        </div>
        <div class="mx-auto p-3">
            <%=link_to club.name, club %><br/>
        </div>
    </div>
    <% end %>
</div>