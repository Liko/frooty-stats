<div class="container">

  <div class="row">
    <%= render "/clubs/club_primary_label", :club => @club %>
  </div>
  <br/>

  <div class="text-center mp-3">
    <%= render "/favourites/add_or_remove" %>
  </div>
  
  <%= render "/layouts/main_title", :content => "Club Stats" %>

  <div class="text-center">
    <%= render "/clubs/club_facts" %>
  </div> 
  <br/>

  <%= render "/layouts/main_title", :content => "Player Stats" %>

  <%= render "/stats/top_stats", {
      :items => :players,
      :stats_array => @player_stats_array
  } %>




<h2> <%= "#{@club.name}" %> Players </h2>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Age</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.name, player %></td>
        <td><%= link_to player.country.name, country_path(player.country) %></td>
        <td><%= player.birthday %></td>
        <td><%= player.position.name %></td>
      
        
      </tr>
    <% end %>
  </tbody>
</table>


 <%= link_to 'Back', url_for(:back) %>
 </div>

