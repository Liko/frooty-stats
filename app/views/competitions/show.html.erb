<div class="container">

    <%= render "/layouts/main_title", :content => @competition.name %>

    <div class="card m-3 hoverable">
    <ul class="nav nav-pills p-3 justify-content-center" id="pills-tab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="pills-clubs-tab" data-toggle="pill" href="#pills-clubs" role="tab"
            aria-controls="pills-clubs" aria-selected="true">Clubs</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-player-stats-tab" data-toggle="pill" href="#pills-player-stats" role="tab"
            aria-controls="pills-player-stats" aria-selected="false">Player Stats</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-club-stats-tab" data-toggle="pill" href="#pills-club-stats" role="tab"
            aria-controls="pills-club-stats" aria-selected="false">Club Stats</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-fixtures-tab" data-toggle="pill" href="#pills-fixtures" role="tab"
            aria-controls="pills-fixtures" aria-selected="false">Fixtures</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-results-tab" data-toggle="pill" href="#pills-results" role="tab"
            aria-controls="pills-results" aria-selected="false">Results</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-table-tab" data-toggle="pill" href="#pills-table" role="tab"
            aria-controls="pills-table" aria-selected="false">League Table</a>
        </li>
        
    </ul>
    </div>

    <div class="tab-content pt-2 pl-1" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-clubs" role="tabpanel" aria-labelledby="pills-clubs-tab">

            <div class="row">
                <% @competition.clubs.each do |club|%>
                    <%= render "/clubs/club_primary_label", :club => club %>
                <% end %>
            </div>
        </div>

        <div class="tab-pane fade" id="pills-player-stats" role="tabpanel" aria-labelledby="pills-player-stats-tab">
            
                <%= render "/stats/top_stats", {
                    :items => :players, 
                    :stats_array => @player_stats_array 
                } %>
        
        </div>

        <div class="tab-pane fade" id="pills-club-stats" role="tabpanel" aria-labelledby="pills-club-stats-tab">

                <%= render "/stats/top_stats", {
                    :items => :clubs,
                    :stats_array => @club_stats_array
                } %>
        </div>

         <div class="tab-pane fade" id="pills-fixtures" role="tabpanel" aria-labelledby="pills-fixtures-tab">

            <div class="card m-3 hoverable">
                <ul class="nav nav-pills p-3 justify-content-center" id="pills-tab" role="tablist">
                    <% @total_fixtures_pages.times do |page_no|%>
                        <%= render "/layouts/pill", page_no: page_no+1 %>
                    <% end %>
                </ul>
            </div>

            <div class="tab-content pt-2 pl-1" id="pills-tabContent">

                <% @fixtures.each_with_index do |match, result_no| %>  

                    <% if result_no % @page_size == 0 %>
                        <div class="tab-pane fade <%="show active" if @fixtures_page_count == 1%>" id=<%="pills-#{@fixtures_page_count}"%> role="tabpanel" aria-labelledby=<%="pills-#{@fixtures_page_count}-tab"%>>

                        <% @fixtures_page_count += 1 %>
                    <% end %>

                    <%= render "/matches/match_combo", {
                        match: match,
                        source: "competitions"
                    } %>

                     <% if result_no % @page_size == @page_size-1 %>
                        </div>
                     <% end %>

                <% end %>

                </div>
            </div>
                  
        </div>

        <div class="tab-pane fade" id="pills-results" role="tabpanel" aria-labelledby="pills-results-tab">

            <div class="card m-3 hoverable">
                <ul class="nav nav-pills p-3 justify-content-center" id="pills-tab" role="tablist">
                    <% @total_results_pages.times do |page_no|%>
                        <%= render "/layouts/pill", page_no: page_no+1 %>
                    <% end %>
                </ul>
            </div>

            <div class="tab-content pt-2 pl-1" id="pills-tabContent">

                <% @results.each_with_index do |match, result_no| %>  

                    <% if result_no % @page_size == 0 %>
                        <div class="tab-pane fade <%="show active" if @results_page_count == 1%>" id=<%="pills-#{@results_page_count}"%> role="tabpanel" aria-labelledby=<%="pills-#{@results_page_count}-tab"%>>

                        <% @results_page_count += 1 %>
                    <% end %>

                    <%= render "/matches/match_combo", {
                        match: match,
                        source: "competitions"
                    } %>

                     <% if result_no % @page_size == @page_size-1 %>
                        </div>
                     <% end %>

                <% end %>

                </div>
            </div>

        </div>


        <div class="tab-pane fade" id="pills-table" role="tabpanel" aria-labelledby="pills-table-tab">

            <%= render "/competitions/league_table" %>
            
        </div>
    </div>
    <br/>

</div>