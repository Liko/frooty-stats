<div class="container">

    <%= render "/layouts/main_title", :content => @competition.name %>

    <div class="card m-3 hoverable">
    <ul class="nav nav-pills p-3 justify-content-center" id="pills-tab" role="tablist">

        <% @pill_links.each_with_index do |content, link_no| %>

            <%= render "/competitions/competition_pill_links", {
                :content => content,
                :link_no => link_no
            }%>

        <% end %>   
    </ul>

    </div>

    <div class="tab-content pt-2 pl-1" id="pills-tabContent">

        <div class="tab-pane fade show active" id="pills-clubs" role="tabpanel" aria-labelledby="pills-clubs-tab">

            <div class="row">
                <% @clubs.each do |club|%>
                    <%= render "/clubs/club_primary_label", :club => club %>
                <% end %>
            </div>

        </div>

        <div class="tab-pane fade" id="pills-player-stats" role="tabpanel" aria-labelledby="pills-player-stats-tab">
            
                <%= render "/stats/top_stats", {
                    :items => :players, 
                    :stats_array => @player_stats_array 
                } %>
        
        </div>

        <div class="tab-pane fade" id="pills-club-stats" role="tabpanel" aria-labelledby="pills-club-stats-tab">

                <%= render "/stats/top_stats", {
                    :items => :clubs,
                    :stats_array => @club_stats_array
                } %>
        </div>

         <div class="tab-pane fade" id="pills-fixtures" role="tabpanel" aria-labelledby="pills-fixtures-tab">

            <%= render "/layouts/pill_matches", {
                :total_matches_pages => @total_fixtures_pages,
                :matches_page_count => @fixtures_page_count,
                :matches => @fixtures,
                :id => "fixtures"
            }%>
                  
        </div>

        <div class="tab-pane fade" id="pills-results" role="tabpanel" aria-labelledby="pills-results-tab">

             <%= render "/layouts/pill_matches", {
                :total_matches_pages => @total_results_pages,
                :matches_page_count => @results_page_count,
                :matches => @results,
                :id => "results"
            }%>

        </div>

        <div class="tab-pane fade" id="pills-league-table" role="tabpanel" aria-labelledby="pills-league-table-tab">

            <%= render "/competitions/league_table", :competition => @competition %>
            
        </div>

    </div>
    <br/>
</div>