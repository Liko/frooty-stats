<%= form_for @user, url: login_path, method: :post do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br>

    <%= f.submit "Log in" %><br>
    Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
<% end %>