<h1> <%= "#{@player.name}" %> </h1>

 
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Age</th>
      <th>Position</th>
      <th>Club</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
  
      <tr>
        <td><%= @player.name %></td>
        <td><%= @player.country.name %></td>
        <td><%= @player.birthday %></td>
        <td><%= @player.position.name %></td>
        <td><%= link_to @player.club.name, player_path(@player) %></td>
        
      </tr>

  </tbody>
</table>

<%= link_to 'Back', url_for(:back) %>