<%= render "/layouts/main_title", :content => "Players" %>
 
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Club</th>
      <th>Position</th>
      <th>Age</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.name, player_path(player) %></td>
        <td><%= link_to player.club.name, club_path(player.club) %></td>
        <td><%= player.position.name %></td>
        <td><%= player.age %></td>
        <td><%= player.country.name %></td>

     
      </tr>
    <% end %>
  </tbody>
</table>
 
<br>

<%= link_to 'Back', url_for(:back) %>